<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ScrollPane?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER_LEFT" minHeight="105" prefHeight="105.0" prefWidth="195.0" >
        <padding>
            <Insets bottom="5" left="15" right="5" top="5" />
        </padding>
        <Label fx:id="idTimer" styleClass="cell_big_label" text="Running Timers">
            <minWidth>
                <!-- Ensures that the label text is never truncated -->
                <Region fx:constant="USE_PREF_SIZE" />
            </minWidth>
        </Label>
        <Text fx:id="runningTimers" VBox.vgrow="ALWAYS" />
    </VBox>
    <VBox alignment="CENTER_LEFT" minHeight="105" prefHeight="105.0" prefWidth="195.0" >
        <padding>
            <Insets bottom="5" left="15" right="5" top="5" />
        </padding>
        <Label fx:id="idToday" styleClass="cell_big_label label-bright" text="Productivity Today">
            <minWidth>
                <!-- Ensures that the label text is never truncated -->
                <Region fx:constant="USE_PREF_SIZE" />
            </minWidth>
        </Label>
        <Text fx:id="productivityToday" VBox.vgrow="ALWAYS" />
    </VBox>
    <VBox alignment="CENTER_LEFT" minHeight="105" prefHeight="105.0" prefWidth="195.0" >
        <padding>
            <Insets bottom="5" left="15" right="5" top="5" />
        </padding>
        <Label fx:id="idOverdue" styleClass="cell_big_label" text="Overdue Tasks">
            <minWidth>
                <!-- Ensures that the label text is never truncated -->
                <Region fx:constant="USE_PREF_SIZE" />
            </minWidth>
        </Label>
        <Text fx:id="overdueTasks" VBox.vgrow="ALWAYS" />
    </VBox>
    <VBox alignment="CENTER_LEFT" minHeight="105" prefHeight="105.0" prefWidth="195.0" >
        <padding>
            <Insets bottom="5" left="15" right="5" top="5" />
        </padding>
        <Label fx:id="idRemaining" styleClass="cell_big_label" text="Remaining Tasks">
            <minWidth>
                <!-- Ensures that the label text is never truncated -->
                <Region fx:constant="USE_PREF_SIZE" />
            </minWidth>
        </Label>
        <Text fx:id="remainingTasks" VBox.vgrow="ALWAYS" />
    </VBox>
</VBox>
