<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="85" prefHeight="140.0" prefWidth="195.0">
            <padding>
                <Insets bottom="4" left="15" right="4" top="3" />
            </padding>
            <Label graphicTextGap="0.0" prefHeight="24.0" prefWidth="155.0" styleClass="cell_big_label" text="Productivity Report" HBox.hgrow="NEVER">
                <minWidth>
                    <!-- Ensures that the label text is never truncated -->
                    <Region fx:constant="USE_PREF_SIZE" />
                </minWidth>
            </Label>
            <HBox prefHeight="26.0" prefWidth="176.0">
                <children>
                    <ProgressBar fx:id="tasksCompletionProgress" maxWidth="-Infinity" prefWidth="200.0" progress="0.0" />
                    <Label fx:id="tasksCompleted" styleClass="cell_medium_label" text="\$tasksCompleted">
                        <minWidth>
                            <!-- Ensures that the label text is never truncated -->
                            <Region fx:constant="USE_PREF_SIZE" />
                        </minWidth>
                    </Label>
                </children>
            </HBox>
            <Label fx:id="remark" styleClass="cell_small_label" text="\$remark">
                <minWidth>
                    <!-- Ensures that the label text is never truncated -->
                    <Region fx:constant="USE_PREF_SIZE" />
                </minWidth>
            </Label>
            <Label fx:id="overdueStatus" styleClass="cell_small_label" text="\$overdueStatus">
                <minWidth>
                    <!-- Ensures that the label text is never truncated -->
                    <Region fx:constant="USE_PREF_SIZE" />
                </minWidth>
            </Label>
            <padding>
                <Insets bottom="4" left="15" right="4" top="3" />
            </padding>
        </VBox>
        <VBox alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="85" prefHeight="100.0" prefWidth="195.0">
            <padding>
                <Insets bottom="4" left="15" right="4" top="3" />
            </padding>
            <Label prefHeight="24.0" prefWidth="90.0" styleClass="cell_medium_label" text="Time Spent">
                <minWidth>
                    <!-- Ensures that the label text is never truncated -->
                    <Region fx:constant="USE_PREF_SIZE" />
                </minWidth>
            </Label>
            <Label fx:id="timeSpentToday" styleClass="cell_small_label" text="\$timeSpentToday" />
        </VBox>
        <VBox alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="85" prefHeight="100.0" prefWidth="195.0">
            <padding>
                <Insets bottom="4" left="15" right="4" top="3" />
            </padding>
         <HBox prefHeight="30.0" prefWidth="176.0">
            <children>
                  <Label prefHeight="24.0" prefWidth="120.0" styleClass="cell_medium_label" text="Running Timer(s)">
                      <minWidth>
                          <!-- Ensures that the label text is never truncated -->
                          <Region fx:constant="USE_PREF_SIZE" />
                      </minWidth>
                  </Label>
               <ImageView fitHeight="27.0" fitWidth="17.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../images/timer.png" />
                  </image>
               </ImageView>
            </children>
         </HBox>
            <Label fx:id="runningTimers" styleClass="cell_small_label" text="\$runningTimers" />
        </VBox>
    </children>
</VBox>
