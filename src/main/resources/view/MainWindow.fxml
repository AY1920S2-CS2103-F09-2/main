<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<?import java.net.URL?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" minHeight="600" minWidth="450" onCloseRequest="#handleExit"
         title="JelphaBot" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1">
    <icons>
        <Image url="@/images/address_book_32.png"/>
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@DarkTheme.css"/>
                <URL value="@Extensions.css"/>
            </stylesheets>

            <VBox maxHeight="1.7976931348623157E308">
                <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
                    <Menu mnemonicParsing="false" text="File">
                        <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit"/>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Help">
                        <items>
                            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help"/>
                        </items>
                    </Menu>
                </MenuBar>
                <TabPane maxHeight="-Infinity" minHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="Task List">
                            <content>
                                <VBox fx:id="taskList" minWidth="340" prefWidth="340.0" styleClass="pane-with-border">
                                    <padding>
                                        <Insets bottom="10" left="10" right="10" top="10"/>
                                    </padding>
                                    <StackPane fx:id="taskListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab text="Calender">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                               <SplitPane fx:id="calenderViewPlaceholder" dividerPositions="0.29797979797979796"
                                          prefHeight="376.0" prefWidth="599.3333333333334" AnchorPane.bottomAnchor="0.0"
                                          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                          AnchorPane.topAnchor="0.0">
                                   <items>
                                       <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="374.0" prefWidth="215.0">
                                           <children>
                                               <!--                                           TODO supposed to show tasks displayed for specified days-->
                                               <StackPane fx:id="taskListPanelPlaceholder1"/>
                                           </children>
                                       </AnchorPane>
                                       <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                                           <children>
                                               <!--                                           TODO supposed to show CalendarPanel-->
                                               <VBox fx:id="" minWidth="340" prefHeight="374.0"
                                                     prefWidth="415.3333333333333" styleClass="pane-with-border"
                                                     AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                     AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                             <padding>
                                                <Insets bottom="10" left="10" right="10" top="10" />
                                             </padding>
                                          </VBox>
                                       </children>
                                    </AnchorPane>
                                </items>
                              </SplitPane>
                           </children></AnchorPane>
                            </content>
                        </Tab>
                        <Tab text="Productivity">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <VBox fx:id="productivityList" minWidth="340" prefWidth="340.0"
                                              styleClass="pane-with-border" AnchorPane.bottomAnchor="0.0"
                                              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                              AnchorPane.topAnchor="0.0">
                                            <padding>
                                                <Insets bottom="10" left="10" right="10" top="10"/>
                                            </padding>
                                            <StackPane fx:id="productivityListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                  <Tab text="Notes">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                  </Tab>
                    </tabs>
                </TabPane>

                <!--        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />-->

                <StackPane fx:id="resultDisplayPlaceholder" maxHeight="1.7976931348623157E308" minHeight="100"
                           styleClass="pane-with-border" VBox.vgrow="NEVER">
                    <padding>
                        <Insets bottom="5" left="10" right="10" top="5"/>
                    </padding>
                </StackPane>

                <StackPane fx:id="commandBoxPlaceholder" styleClass="stack-pane" VBox.vgrow="NEVER">
                    <padding>
                        <Insets bottom="5" left="10" right="10" top="5" />
                    </padding>
                </StackPane>

            </VBox>
        </Scene>
    </scene>
</fx:root>
